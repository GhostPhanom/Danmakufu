function CreateBGM(bgm,v)
{
    let obj = ObjSound_Create;
    ObjSound_SetLoopEnable(obj,true);
    ObjSound_SetVolumeRate(obj,v);
    ObjSound_SetSoundDivision(obj,SOUND_BGM);
    ObjSound_Load(obj,bgm);
    return obj;
}


